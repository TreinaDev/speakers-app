<nav class="navbar section-x <%= 'navbar--actived' if request.path != root_path %>">
  <div class="navbar_content">
    <p class="logo"><%= t('.lecture') %> +</p>
    <div class="flex">
      <%= link_to 'Home', root_path, class: 'nav_link_primary' %>
      <% if request.path == root_path %>
      <a href="#how_works" class="nav_link_primary"><%= t('.how_work') %></a>
      <% end %>
      <% unless user_signed_in? %>
        <%= link_to t('.create_account'), new_user_registration_path, class: 'nav_link_primary' %>
        <%= link_to t('.access_account'), new_user_session_path, class: 'nav_link_primary' %>
      <% else %>
        <%= link_to t('.my_contents'), event_contents_path, class: 'nav_link_primary' %>
        <% if current_user.profile.nil? || !current_user.profile.persisted? %>
          <%= link_to t('.create_profile'), new_profile_path, class: 'nav_link_primary' %>
        <% elsif current_user.profile.persisted? %>
          <%= link_to t('.my_profile'), profile_path(username: current_user&.profile.username), class: 'nav_link_primary' %>
        <% end %>
        <%= link_to t('.tasks'), event_tasks_path, data:{turbo: false}, class: 'nav_link_primary' %>
        <%= button_to t('.log_out'), destroy_user_session_path, method: :delete, class: 'nav_link_primary' %>
      <% end %>
    </div>
  </div>
</nav>