<h2 class="heading-2"><%= t('.title') %></h2>

<div>
    <div class="mt-10 flex items-center justify-start">
        <div class="w-1/2">
            <p class="tracking-wider text-blue-600 text-2xl"><%= @profile.title %></p>
            <h3 class="font-bold text-2xl"><%= @profile.user.full_name %></h3>
            <% @profile.social_networks.each do |network| %>
                <%= link_to network.translated_social_network_type(network.social_network_type), network.url %>
            <% end %>
        </div>
        <div class="w-1/2">
            <%= image_tag @profile.profile_picture, width: 300, height: 200, class: 'rounded-full' %>
        </div>
    </div>
    <div>
        <h3 class="text-xl font-bold">Sobre mim</h3>
        <p class="mt-7"><%= @profile.about_me %></p>
    </div>
</div>

<div>
    <h3 class="text-xl font-bold mt-7"><%= t('.my_events') %> (<%= @events.count %>)</h3>

    <% if @events.any? %>
        <ul class="flex flex-wrap gap-6">
            <% @events.each do |event| %>
                <li class="border border-gray-200 w-96 p-6 rounded-lg shadow flex-column items-center">
                <%= image_tag "https://picsum.photos/200/300", class: "w-96 h-32 object-cover rounded-lg mr-6" %>
                <h2 class="text-2xl font-bold text-indigo-700 hover:text-indigo-900 mb-2"><%= link_to event.name, event_path(event.id) %></h2>
                <p class="text-gray-700 text-lg mb-2"><%= event.description %></p>
                </li>
            <% end %>
        </ul>
    <% else %>
        <p class="mt-7">Não existe nenhum evento ao qual você faça parte. Se você acha que isso é um erro, entre em contato com algum organizador.</p>
    <% end %>
</div>