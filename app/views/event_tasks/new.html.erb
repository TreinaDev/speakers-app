<%= form_with model: @event_task, data: { turbo: false } do |f| %>
  <div>
    <%= f.label :name, class: 'label-primary' %>
    <%= f.text_field :name, class: 'field-primary' %>
  </div>
  <div>
    <%= f.label :description, class: 'label-primary' %>
    <%= f.text_area :description, class: 'text-area' %>
  </div>
  <div>
  <%= f.label :certificate_requirement, class: 'label-primary' %>
  <%= f.collection_radio_buttons :certificate_requirement, EventTask.certificate_requirements.keys.map { |key| [key.humanize, key] }, :second, :first do |b| %>
    <div>
      <%= b.radio_button %>
      <%= b.label %>
    </div>
  <% end %>
</div>
  <div>
    <%= f.label :event_content , class: 'label-primary'%>
    <%= f.select :event_content_ids, EventContent.all.collect { |content| [content.title, content.id] }, { multiple: true }, class: "w-full p-2 border-b border-[#735EBC] bg-field rounded focus:outline-none focus:ring-2 focus:ring-[#735EBC]" %>
  </div>
  <div>
    <%= f.submit 'Salvar' %>
  </div>
<% end %>

