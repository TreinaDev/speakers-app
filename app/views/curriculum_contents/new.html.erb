<%= turbo_frame_tag 'modal' do %>
 <div class="modal">
    <h2 class='heading-2'>Adicionar conteúdo ao currículo:</h2>

    <%= form_with model: [ @curriculum, @curriculum_content ] do |f| %>

      <% if @event_contents.any? %>
        <div>
          <%= f.label :event_content_id, class: 'label-primary' %>
          <%= f.collection_select :event_content_id, @event_contents, :id, :title, class: 'field-primary' %>
        </div>

        <div class="mt-5">
          <%= f.submit 'Adicionar', class: 'btn-primary' %>
        </div>
      <% else %>
        <div>
          <b>Não existem conteúdos disponíveis.</b>
        </div>
        
        <div>
          <%= link_to 'Clique aqui para cadastrar um conteúdo', new_event_content_path, class: 'link-primary', data: { turbo: false } %>
        </div>
      <% end %>
      
      <div class="mt-5">
        <%= link_to 'Cancelar', "#", data: {
            controller: 'modals',
            action: 'modals#close'
        }, class: 'btn-primary' %>
      </div>
    <% end %>
  </div>
<% end %>