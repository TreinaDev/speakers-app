<%= render 'shared/errors', object: @event_content %>

<%= form_with(model: @event_content, data: { turbo: false }) do |f| %>
  <div>
    <%= f.label :title, class: 'label-primary' %>
    <%= f.text_field :title, class: 'field-primary' %>
  </div>

  <div>
    <%= f.label :description, class: 'label-primary'  %>
    <%= f.text_area :description, class: 'text-area' %>
