<h2 class="heading-2">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"max-w-sm mx-auto") do |f| %>
  <div class="mb-3">
    <%= f.label :email, class: 'label-primary' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'field-primary' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'label-primary' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'field-primary' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Entrar", class: 'btn-primary' %>
  </div>
<% end %>

<%= render "users/shared/links" %>
