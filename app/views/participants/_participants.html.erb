<div id="participant_list" class="list__participant">
  <h2><%= t('.participant_list') %></h2>
  <% if participants.present? %>
  <div class="mb-3">
    <small><%= t('.participant_number') %>: <%= participants.count %></small>
  </div>
    <div class="participant-list">
      <% participants.each do |participant| %>
      <div class="flex gap-2 border-2 bg-gray-200 my-3 p-2">
        <%= image_tag 'participant.svg', class: 'icon' %>
        <p class="self-center"><%= participant.name %> <%= participant.last_name %></p>
      </div>
      <% end %>
    </div>
  <% else %>

  <div class="not-found-participants">
    <p><%= t('.no_participants') %></p>
  </div>
  <% end %>
</div>